{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* FIXME: waiting for @types/react-virtualized to be updated */
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "include": ["gulpfile.ts", "webpack.config.ts", "aliem/js/**/*"]
}
