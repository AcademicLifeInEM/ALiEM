@require '../colors'

// "post" specific
.single
    #content
        margin-top: -15px

    // "Next" and "Previous" buttons at the top of posts
    .single-navigation
        margin-bottom: 0 !important
        border: none
        a:first-of-type
            float: left
            padding-left: 10px
        a[rel='prev'], a[rel='next'] // @stylint ignore
            color: $font-gray
            &:before,
            &:after
                color: $font-gray
            &:hover,
            &:hover:before,
            &:hover:after
                color: $font-primary

    .post
        background: white
        padding: 20px
        border-radius: 2px
        box-shadow: $shadow-2dp

// "page" specific
.page
    .page
        @extends .single .post

.search
    .fusion-timeline-date
        background: transparent
    .fusion-post-timeline
        background: white
        border: 0
        border-radius: 2px
        box-shadow: $shadow-2dp
        .fusion-post-content-wrapper
            padding: 20px
            padding-bottom: 5px
        .fusion-meta-info
            margin: 0
        .fusion-post-content-container
            display: none
        .fusion-content-sep
            height: 0

#main
    padding-top: 135px
    background: $secondary

#content
    margin-top: 20px
    width: 75%
    iframe
        max-width: 90%
        height: 400px
        margin: 0 5%
    for v, k in 600 480
        @media (max-width: v+0px)
            iframe
                height: 300 - (k*100)px
    .twitter-tweet-rendered
        margin: auto

.pagination
    width: 100%
    text-align: center

.pagination-prev,
.pagination-next
    color: $font-gray
    &:before,
    &:after
        color: $font-gray
    &:hover
        color: $font-primary
        &:before,
        &:after
            color: $font-primary

// Both the "read more" div on the home page and the author meta on posts
.fusion-meta-info
    border: 0
    margin: 0

.fusion-meta-info-wrapper
    line-height: 1.5em
    > div
        padding-bottom: 5px

.fusion-single-line-meta
    > div
        padding-top: 5px

// Gigantic image above pages
.fusion-flexslider
    display: none

// Useless title bar
.fusion-page-title-bar
    display: none

@media (max-width: 800px)
    .single #content
        margin-top: 0

    #main
        padding-top: 0

    // Better image alignment on mobile TODO: This looks strange. Might wanna test this
    .post .post-content img
        float: none
        display: table-header-group
    #content
        blockquote
            margin-left: 0
            margin-right: 0
