@require 'colors'

table
    border-collapse: collapse
    border-spacing: 0
    width: 100%
    margin-bottom: 1.5em
    border: none
    box-shadow: $shadow-2dp
    thead>tr>td,
    tbody>tr>th
        background-color: $primary
        text-align: left
        font-weight: bold
        color: white
    tr
        &:nth-child(odd)
            background-color: $tertiary
        td, th
            padding: 0.8em
            vertical-align: top
    tfoot
        font-size: 0.8em
        tr
            background-color: white !important
            border-top: solid darken($secondary, 10) 1px
        td
            text-align: justify
            padding: 0 .8em
            color: $font-gray
        p
            margin: 10px 0 !important
            line-height: 1.5em

// @stylint off
.ReactVirtualized__Table
    @extends table
    border-radius: 2px 2px 0 0
    &:focus
        outline: 0

    & *:focus
        outline: 0

.ReactVirtualized__Grid.ReactVirtualized__Table__Grid
    box-shadow: $shadow-2dp

.ReactVirtualized__Table__headerRow
    @extends table thead>tr>td
    text-transform: none !important
    line-height: normal

.ReactVirtualized__Table__headerColumn
    white-space: nowrap
