@require '../colors'

// Academic Bloggers Toolkit
.abt_PR_heading // @stylint ignore
    border-bottom: 4px solid $primary

#abt-bibliography
    background: $tertiary
    border-radius: 2px
    font-size: 0.8em
    padding: 0 10px 10px 10px
    &::before
        content: 'References'
        font-size: 1.3rem
        line-height: 2.5em

.abt_PR_info // @stylint ignore
    line-height: 1.5em

// Polldaddy
.PDS_Poll // @stylint ignore
    margin: 20px auto

// Shortcodes Ultimate
.su-lightbox
    display: block
    position: fixed !important
    z-index: 999
    bottom: -5px !important
    left: 2% !important
    span
        line-height: 40px !important
        font-size: 1.3em !important
