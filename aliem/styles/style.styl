@import url('../Avada/style.css')

@require 'colors'
@require 'variables'
@require 'collections/social-icons'
@require 'collections/avada'
@require 'collections/plugins'

@require 'collections/header'
@require 'collections/home'
@require 'collections/content'
@require 'collections/sidebar'
@require 'collections/footer'

body
    font-family: 'Open Sans'
    font-size: 16px
    color: $font-primary
sub, sup
    font-size: 75%
    line-height: 0
    position: relative
    vertical-align: baseline
sub
    bottom: -.25em
sup
    top: -0.5em

a, .fusion-content-widget-area .widget li a
    color: $primary
    &:hover
        color: darken($primary, 10)
strong
    font-weight: 600

input
    &:focus
        outline-color: $input-focus

::selection
    background: $primary
    color: white

table
    border-collapse: collapse
    border-spacing: 0
    width: 100%
    margin-bottom: 1em
    border: none
    box-shadow: $shadow-2dp
    thead>tr>td,
    tbody>tr>th
        background-color: $primary
        text-align: left
        font-weight: bold
        color: white
    tr
        &:nth-child(odd)
            background-color: $tertiary
        td, th
            padding: 0.8em
            vertical-align: top
    tfoot
        font-size: 0.8em
        tr
            background-color: white !important
            border-top: solid darken($secondary, 10) 1px
        td
            text-align: justify
            padding: 0 .8em
            color: $font-gray
        p
            margin: 10px 0 !important
            line-height: 1.5em


@media (max-width: 800px)
    table
        position: relative
        display: block
        max-width: 100%
        overflow-x: scroll
