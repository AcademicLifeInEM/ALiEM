@import url('../Avada/style.css')

@require 'colors'
@require 'variables'
@require 'collections/social-icons'
@require 'collections/avada'
@require 'collections/plugins'

@require 'collections/header'
@require 'collections/home'
@require 'collections/content'
@require 'collections/sidebar'
@require 'collections/footer'

body
    font-family: 'Open Sans'
    font-size: 16px
    color: $font-primary
sub, sup
    font-size: 75%
    line-height: 0
    position: relative
    vertical-align: baseline
sub
    bottom: -.25em
sup
    top: -0.5em

table
    border-collapse: collapse
    border-spacing: 0
    width: 100%
    margin-bottom: 1em
    border: none
    box-shadow: $shadow-2dp
    th, thead
        td
            background-color: $primary
            text-align: left
            font-weight: 700
            color: white
    tr
        &:nth-child(odd)
            background-color: $secondary
        &:hover
            background-color: darken($secondary, 3)
        td
            padding: 0.8em
            vertical-align: top
    tfoot
        font-size: 0.8em
        tr, tr:hover
            background-color: white !important
            border-top: solid darken($secondary, 10)
        td
            text-align: justify
            padding: 0 0.8em
